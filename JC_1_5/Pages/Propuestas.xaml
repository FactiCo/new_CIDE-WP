            <ListBox  Name="lstPropuestas_Vecinal">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Grid Margin="10,10,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" ></ColumnDefinition>
                                    <ColumnDefinition Width="*" ></ColumnDefinition>
                                    <ColumnDefinition Width="20" ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Row="0" Grid.Column="0" Name="imgCat"></Image>
                                <TextBlock Grid.Row="0" Grid.Column="1" Name="Titulo" Text="{Binding title}" />
                                <Image Grid.Row="0" Grid.Column="2" Name="imgGo"></Image>
                                <RichTextBox Grid.Row="1" Grid.Column="2" Name="txtVotos" HorizontalAlignment="Center">
