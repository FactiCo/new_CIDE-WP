                                                <InlineUIContainer>
                                                    <TextBlock   Text="{Binding votes.Total}"></TextBlock>
                                                </InlineUIContainer>
                                            </Paragraph>
                                        </RichTextBox>
                                    </Grid>



                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </phone:PivotItem>

